FROM openjdk:11-jre-slim

ARG GOOGLE_APPLICATION_CREDENTIALS_SUPPLIER
ARG GOOGLE_APPLICATION_CREDENTIALS_CLIENT

COPY ${GOOGLE_APPLICATION_CREDENTIALS_SUPPLIER} ${GOOGLE_APPLICATION_CREDENTIALS_SUPPLIER}
COPY ${GOOGLE_APPLICATION_CREDENTIALS_CLIENT} ${GOOGLE_APPLICATION_CREDENTIALS_CLIENT}


COPY ./build/libs/stream.jar /app.jar

EXPOSE 5003

CMD ["java", "-Xmx2048m", "-jar","/app.jar", "--server.port=5003"]